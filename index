        <p class="text-sm opacity-70">Â© 2025 Interactive 3D Portfolio. All rights reserved.</p>
        <p class="text-xs mt-2 opacity-50">Crafted with Three.js, WebGL and creative code.</p>
      </div>
    </footer>
  </div>
  
  <!-- Chatbot Interface (Hidden by default) -->
  <div id="chatbot" class="fixed bottom-8 right-8 z-50 bg-white/10 backdrop-blur-md rounded-lg border border-white/20 w-80 shadow-xl hidden">
    <div class="flex items-center justify-between p-4 border-b border-white/10">
      <h3 class="font-medium">Chat with Assistant</h3>
      <button id="close-chat" class="text-white/70 hover:text-white">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    <div id="chat-messages" class="p-4 h-80 overflow-y-auto space-y-4">
      <div class="flex items-start gap-2">
        <div class="w-8 h-8 rounded-full bg-primary-color flex items-center justify-center text-xs font-bold">AI</div>
        <div class="bg-white/20 rounded-lg p-3 text-sm max-w-[80%]">
          <p>Hi there! I'm the portfolio assistant. How can I help you today?</p>
        </div>
      </div>
    </div>
    <div class="p-4 border-t border-white/10">
      <div class="flex gap-2">
        <input id="chat-input" type="text" placeholder="Type a message..." class="flex-1 bg-white/10 border border-white/20 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-primary-color">
        <button id="send-message" class="bg-primary-color text-white p-2 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Scripts -->
  
<script type="importmap">
  {
    "imports": {
      "three": "https://unpkg.com/three@0.159.0/build/three.module.js",
      "three/addons/": "https://unpkg.com/three@0.159.0/examples/jsm/",
      "gsap": "https://unpkg.com/gsap@3.12.4/dist/gsap.min.js"
    }
  }
</script>

<script type="module">
  import * as THREE from 'three';
  import { OrbitControls } from 'three/addons/controls/OrbitControls.js';
  import { GLTFLoader } from 'three/addons/loaders/GLTFLoader.js';
  import { EffectComposer } from 'three/addons/postprocessing/EffectComposer.js';
  import { RenderPass } from 'three/addons/postprocessing/RenderPass.js';
  import { UnrealBloomPass } from 'three/addons/postprocessing/UnrealBloomPass.js';
  import { ShaderPass } from 'three/addons/postprocessing/ShaderPass.js';
  
  // DOM Elements
  const loadingScreen = document.getElementById('loading-screen');
  const progressBar = document.getElementById('progress');
  const loadingText = document.getElementById('loading-text');
  const canvas = document.getElementById('character-canvas');
  const chatButton = document.getElementById('chat-with-character');
  const chatbox = document.getElementById('chatbot');
  const closeChat = document.getElementById('close-chat');
  const chatInput = document.getElementById('chat-input');
  const sendMessage = document.getElementById('send-message');
  const chatMessages = document.getElementById('chat-messages');
  
  // Scene Setup
  const scene = new THREE.Scene();
  const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
  const renderer = new THREE.WebGLRenderer({
    canvas: canvas,
    antialias: true,
    alpha: true
  });
  
  renderer.setSize(window.innerWidth, window.innerHeight);
  renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
  renderer.outputColorSpace = THREE.SRGBColorSpace;
  
  // Lighting
  const ambientLight = new THREE.AmbientLight(0x404040, 2);
  scene.add(ambientLight);
  
  const directionalLight = new THREE.DirectionalLight(0xffffff, 2);
  directionalLight.position.set(1, 1, 1);
  scene.add(directionalLight);
  
  const pointLight1 = new THREE.PointLight(0x6C63FF, 2, 10);
  pointLight1.position.set(2, 1, 4);
  scene.add(pointLight1);
  
  const pointLight2 = new THREE.PointLight(0xFF6584, 2, 10);
  pointLight2.position.set(-2, 1, -4);
  scene.add(pointLight2);
  
  // Post-processing
  const composer = new EffectComposer(renderer);
  const renderPass = new RenderPass(scene, camera);
  composer.addPass(renderPass);
  
  const bloomPass = new UnrealBloomPass(
    new THREE.Vector2(window.innerWidth, window.innerHeight),
    0.5,  // strength
    0.4,  // radius
    0.85  // threshold
  );
  composer.addPass(bloomPass);
  
  // Camera position
  camera.position.set(0, 1.5, 5);
  camera.lookAt(0, 0, 0);
  
  // Controls
  const controls = new OrbitControls(camera, renderer.domElement);
  controls.enableDamping = true;
  controls.dampingFactor = 0.05;
  controls.enableZoom = false;
  controls.enablePan = false;
  controls.maxPolarAngle = Math.PI / 2;
  controls.minPolarAngle = Math.PI / 3;
  
  // Variables for interaction
  let character;
  let mixer;
  let currentAction;
  let actions = {};
  let clock = new THREE.Clock();
  let mouseX = 0;
  let mouseY = 0;
  let targetX = 0;
  let targetY = 0;
  let windowHalfX = window.innerWidth / 2;
  let windowHalfY = window.innerHeight / 2;
  let hasGyro = false;
  
  // Particle system for background
  function createParticles() {
    const particleCount = 1000;
    const particles = new THREE.BufferGeometry();
    const positions = new Float32Array(particleCount * 3);
    const colors = new Float32Array(particleCount * 3);
    
    const color1 = new THREE.Color(0x6C63FF);
    const color2 = new THREE.Color(0xFF6584);
    const color3 = new THREE.Color(0x00D9FF);
    
    for (let i = 0; i < particleCount; i++) {
      // Position
      positions[i * 3] = (Math.random() - 0.5) * 50;
      positions[i * 3 + 1] = (Math.random() - 0.5) * 50;
      positions[i * 3 + 2] = (Math.random() - 0.5) * 50;
      
      // Color
      const colorChoice = Math.random();
      let color;
      
      if (colorChoice < 0.33) color = color1;
      else if (colorChoice < 0.66) color = color2;
      else color = color3;
      
      colors[i * 3] = color.r;
      colors[i * 3 + 1] = color.g;
      colors[i * 3 + 2] = color.b;
    }
    
    particles.setAttribute('position', new THREE.BufferAttribute(positions, 3));
    particles.setAttribute('color', new THREE.BufferAttribute(colors, 3));
    
    const particleMaterial = new THREE.PointsMaterial({
      size: 0.1,
      vertexColors: true,
      transparent: true,
      opacity: 0.8
    });
    
    const particleSystem = new THREE.Points(particles, particleMaterial);
    scene.add(particleSystem);
    
    return particleSystem;
  }
  
  const particles = createParticles();
  
  // Create floating 3D objects
  function createFloatingObjects() {
    const objects = [];
    
    // Create abstract geometries
    const geometries = [
      new THREE.TorusGeometry(1, 0.3, 16, 32),
      new THREE.OctahedronGeometry(1, 0),
      new THREE.IcosahedronGeometry(1, 0),
      new THREE.TetrahedronGeometry(1, 0)
    ];
    
    const materials = [
      new THREE.MeshStandardMaterial({ 
        color: 0x6C63FF, 
        metalness: 0.3,
        roughness: 0.4,
        emissive: 0x6C63FF,
        emissiveIntensity: 0.2
      }),
      new THREE.MeshStandardMaterial({ 
        color: 0xFF6584, 
        metalness: 0.3,
        roughness: 0.4,
        emissive: 0xFF6584,
        emissiveIntensity: 0.2
      }),
      new THREE.MeshStandardMaterial({ 
        color: 0x00D9FF, 
        metalness: 0.3,
        roughness: 0.4,
        emissive: 0x00D9FF,
        emissiveIntensity: 0.2
      })
    ];
    
    // Create objects with random positions
    for (let i = 0; i < 10; i++) {
      const geometry = geometries[Math.floor(Math.random() * geometries.length)];
      const material = materials[Math.floor(Math.random() * materials.length)];
      
      const object = new THREE.Mesh(geometry, material);
      
      // Position objects in a sphere around the center
      const radius = 10 + Math.random() * 10;
      const theta = Math.random() * Math.PI * 2;
      const phi = Math.random() * Math.PI;
      
      object.position.x = radius * Math.sin(phi) * Math.cos(theta);
      object.position.y = radius * Math.sin(phi) * Math.sin(theta);
      object.position.z = radius * Math.cos(phi);
      
      // Random scale
      const scale = 0.2 + Math.random() * 0.5;
      object.scale.set(scale, scale, scale);
      
      // Store initial position for animation
      object.userData.initialPosition = object.position.clone();
      object.userData.rotationSpeed = {
        x: Math.random() * 0.01,
        y: Math.random() * 0.01,
        z: Math.random() * 0.01
      };
      
      scene.add(object);
      objects.push(object);
    }
    
    return objects;
  }
  
  const floatingObjects = createFloatingObjects();
  
  // 3D Text
  function create3DText() {
    // We'll use a placeholder for 3D text since it requires font loading
    // In a real implementation, you'd use TextGeometry from Three.js
    const textGeometry = new THREE.PlaneGeometry(5, 1);
    const textMaterial = new THREE.MeshBasicMaterial({ 
      color: 0xffffff,
      transparent: true,
      opacity: 0,
      side: THREE.DoubleSide
    });
    
    const textMesh = new THREE.Mesh(textGeometry, textMaterial);
    textMesh.position.set(0, 2, -5);
    scene.add(textMesh);
    
    return textMesh;
  }
  
  const text3D = create3DText();
  
  // Create a placeholder 3D character
  // In a real implementation, you'd load a GLTF model
  function createPlaceholderCharacter() {
    const group = new THREE.Group();
    
    // Head
    const headGeometry = new THREE.SphereGeometry(0.5, 32, 32);
    const headMaterial = new THREE.MeshStandardMaterial({ 
      color: 0xFFD700,
      metalness: 0.3,
      roughness: 0.4,
      emissive: 0xFFD700,
      emissiveIntensity: 0.2
    });
    const head = new THREE.Mesh(headGeometry, headMaterial);
    group.add(head);
    
    // Eyes
    const eyeGeometry = new THREE.SphereGeometry(0.1, 32, 16);
    const eyeMaterial = new THREE.MeshBasicMaterial({ color: 0x000000 });
    
    const leftEye = new THREE.Mesh(eyeGeometry, eyeMaterial);
    leftEye.position.set(-0.2, 0.1, 0.4);
    group.add(leftEye);
    
    const rightEye = new THREE.Mesh(eyeGeometry, eyeMaterial);
    rightEye.position.set(0.2, 0.1, 0.4);
    group.add(rightEye);
    
    // Body
    const bodyGeometry = new THREE.CylinderGeometry(0.3, 0.5, 1, 32);
    const bodyMaterial = new THREE.MeshStandardMaterial({ 
      color: 0x6C63FF,
      metalness: 0.3,
      roughness: 0.4
    });
    const body = new THREE.Mesh(bodyGeometry, bodyMaterial);
    body.position.y = -0.75;
    group.add(body);
    
    // Arms
    const armGeometry = new THREE.CylinderGeometry(0.1, 0.1, 0.8, 32);
    const armMaterial = new THREE.MeshStandardMaterial({ 
      color: 0x6C63FF,
      metalness: 0.3,
      roughness: 0.4
    });
    
    const leftArm = new THREE.Mesh(armGeometry, armMaterial);
    leftArm.position.set(-0.6, -0.5, 0);
    leftArm.rotation.z = Math.PI / 4;
    group.add(leftArm);
    
    const rightArm = new THREE.Mesh(armGeometry, armMaterial);
    rightArm.position.set(0.6, -0.5, 0);
    rightArm.rotation.z = -Math.PI / 4;
    group.add(rightArm);
    
    // Position the character
    group.position.set(0, 0, 0);
    scene.add(group);
    
    // Add simple animations
    const animateCharacter = () => {
      // Breathing animation
      const time = performance.now() * 0.001;
      group.position.y = Math.sin(time * 2) * 0.1;
      leftArm.rotation.z = Math.PI / 4 + Math.sin(time * 3) * 0.1;
      rightArm.rotation.z = -Math.PI / 4 + Math.sin(time * 2.5) * 0.1;
    };
    
    return { group, animateCharacter, leftEye, rightEye };
  }
  
  const characterObj = createPlaceholderCharacter();
  character = characterObj.group;
  
  // Setup mouse move event
  document.addEventListener('mousemove', onMouseMove);
  
  function onMouseMove(event) {
    mouseX = (event.clientX - windowHalfX) / 100;
    mouseY = (event.clientY - windowHalfY) / 100;
  }
  
  // Setup gyroscope if available
  if (window.DeviceOrientationEvent) {
    window.addEventListener('deviceorientation', onDeviceOrientation);
  }
  
  function onDeviceOrientation(event) {
    if (event.beta && event.gamma) {
      hasGyro = true;
      targetY = event.beta * 0.1;  // -180 to 180 (front/back tilt)
      targetX = event.gamma * 0.1; // -90 to 90 (left/right tilt)
    }
  }
  
  // Handle window resize
  window.addEventListener('resize', onWindowResize);
  
  function onWindowResize() {
    windowHalfX = window.innerWidth / 2;
    windowHalfY = window.innerHeight / 2;
    camera.aspect = window.innerWidth / window.innerHeight;
    camera.updateProjectionMatrix();
    renderer.setSize(window.innerWidth, window.innerHeight);
    composer.setSize(window.innerWidth, window.innerHeight);
  }
  
  // Scroll event for character reactions
  let scrollY = window.scrollY;
  window.addEventListener('scroll', () => {
    const newScrollY = window.scrollY;
    const scrollDirection = newScrollY > scrollY ? 'down' : 'up';
    scrollY = newScrollY;
    
    // Make character look up or down based on scroll direction
    if (character) {
      const targetRotationX = scrollDirection === 'down' ? 0.3 : -0.3;
      gsap.to(character.rotation, {
        x: targetRotationX,
        duration: 0.5,
        ease: 'power2.out'
      });
    }
  });
  
  // Click handler for character interaction
  canvas.addEventListener('click', () => {
    // Make character react with surprise
    if (character) {
      // Scale up and down quickly
      gsap.to(character.scale, {
        x: 1.2,
        y: 1.2,
        z: 1.2,
        duration: 0.1,
        ease: 'power2.out',
        onComplete: () => {
          gsap.to(character.scale, {
            x: 1,
            y: 1,
            z: 1,
            duration: 0.2,
            ease: 'elastic.out(1, 0.3)'
          });
        }
      });
    }
  });
  
  // Chatbot functionality
  if (chatButton) {
    chatButton.addEventListener('click', () => {
      chatbox.classList.remove('hidden');
    });
  }
  
  if (closeChat) {
    closeChat.addEventListener('click', () => {
      chatbox.classList.add('hidden');
    });
  }
  
  // Simple chat functionality
  function sendChatMessage() {
    const message = chatInput.value.trim();
    if (!message) return;
    
    // Add user message
    const userMessage = document.createElement('div');
    userMessage.className = 'flex items-start gap-2 justify-end';
    userMessage.innerHTML = `
      <div class="bg-primary-color/30 rounded-lg p-3 text-sm max-w-[80%]">
        <p>${message}</p>
      </div>
      <div class="w-8 h-8 rounded-full bg-white/20 flex items-center justify-center text-xs font-bold">You</div>
    `;
    chatMessages.appendChild(userMessage);
    
    // Clear input
    chatInput.value = '';
    
    // Scroll to bottom
    chatMessages.scrollTop = chatMessages.scrollHeight;
    
    // Simulate AI response (in real implementation, this would call an API)
    setTimeout(() => {
      const responses = [
        "Thanks for reaching out! I'd love to discuss your project in detail.",
        "That sounds interesting! Can you tell me more about what you're looking for?",
        "I specialize in creating interactive 3D experiences. How can I help with your project?",
        "Feel free to check out my portfolio for examples of my previous work.",
        "I'm currently available for new projects. Would you like to schedule a call?"
      ];
      
      const randomResponse = responses[Math.floor(Math.random() * responses.length)];
      
      const aiMessage = document.createElement('div');
      aiMessage.className = 'flex items-start gap-2';
      aiMessage.innerHTML = `
        <div class="w-8 h-8 rounded-full bg-primary-color flex items-center justify-center text-xs font-bold">AI</div>
        <div class="bg-white/20 rounded-lg p-3 text-sm max-w-[80%]">
          <p>${randomResponse}</p>
        </div>
      `;
      chatMessages.appendChild(aiMessage);
      
      // Scroll to bottom
      chatMessages.scrollTop = chatMessages.scrollHeight;
      
      // Make character react
      if (character) {
        gsap.to(character.rotation, {
          y: character.rotation.y + Math.PI * 2,
          duration: 1,
          ease: 'power2.out'
        });
      }
    }, 1000);
  }
  
  if (sendMessage) {
    sendMessage.addEventListener('click', sendChatMessage);
  }
  
  if (chatInput) {
    chatInput.addEventListener('keypress', (event) => {
      if (event.key === 'Enter') {
        sendChatMessage();
      }
    });
  }
  
  // Animation loop
  function animate() {
    requestAnimationFrame(animate);
    
    const delta = clock.getDelta();
    
    // Update character animations
    if (mixer) {
      mixer.update(delta);
    }
    
    // Update character orientation based on mouse/gyro
    if (character) {
      // Use gyro if available, otherwise use mouse
      const inputX = hasGyro ? targetX : mouseX;
      const inputY = hasGyro ? targetY : mouseY;
      
      // Smooth follow
      character.rotation.y += (inputX * 0.5 - character.rotation.y) * 0.05;
      character.rotation.x += (inputY * 0.3 - character.rotation.x) * 0.05;
      
      // Update character's animated parts
      characterObj.animateCharacter();
      
      // Make eyes follow mouse
      if (characterObj.leftEye && characterObj.rightEye) {
        characterObj.leftEye.position.x = -0.2 + inputX * 0.05;
        characterObj.leftEye.position.y = 0.1 + inputY * 0.05;
        
        characterObj.rightEye.position.x = 0.2 + inputX * 0.05;
        characterObj.rightEye.position.y = 0.1 + inputY * 0.05;
      }
    }
    
    // Animate particles
    if (particles) {
      particles.rotation.y += 0.0005;
      particles.rotation.x += 0.0002;
    }
    
    // Animate floating objects
    floatingObjects.forEach((object, i) => {
      const time = Date.now() * 0.001;
      const initialPos = object.userData.initialPosition;
      
      // Floating animation
      object.position.y = initialPos.y + Math.sin(time * (0.5 + i * 0.1)) * 0.5;
      
      // Rotation
      object.rotation.x += object.userData.rotationSpeed.x;
      object.rotation.y += object.userData.rotationSpeed.y;
      object.rotation.z += object.userData.rotationSpeed.z;
      
      // React to mouse movement (subtle attraction/repulsion)
      if (!hasGyro) {
        const distanceFactorX = mouseX / windowHalfX * 0.05;
        const distanceFactorY = mouseY / windowHalfY * 0.05;
        
        object.position.x += distanceFactorX * (i % 2 === 0 ? 1 : -1);
        object.position.z += distanceFactorY * (i % 2 === 0 ? 1 : -1);
      }
    });
    
    // Update controls
    controls.update();
    
    // Render scene with post-processing
    composer.render();
  }
  
  // Initialize and start animation
  function init() {
    let isLoaded = false;

    // Force hide loading screen after a maximum timeout (safety measure)
    setTimeout(() => {
      if (!isLoaded) {
        hideLoadingScreen();
        console.log('Forced loading screen hide after timeout');
      }
    }, 5000);

    // Simulate loading progress
    let progress = 0;
    const loadingInterval = setInterval(() => {
      progress += Math.random() * 10;
      if (progress >= 100) {
        progress = 100;
        clearInterval(loadingInterval);
        isLoaded = true;

        // Hide loading screen
        hideLoadingScreen();
      }

      if (progressBar) {
        progressBar.style.width = `${progress}%`;
      }

      if (loadingText) {
        const messages = [
          "Loading 3D Environment...",
          "Preparing Character...",
          "Setting up Physics...",
          "Initializing Animations...",
          "Almost Ready..."
        ];

        const messageIndex = Math.min(
          Math.floor(progress / 20),
          messages.length - 1
        );

        loadingText.textContent = messages[messageIndex];
      }
    }, 150);

    // Start animation loop
    animate();
  }

  function hideLoadingScreen() {
    if (loadingScreen) {
      loadingScreen.style.opacity = '0';
      setTimeout(() => {
        loadingScreen.style.display = 'none';
        console.log('Loading screen hidden');
      }, 500);
    }
  }

  // Start everything
  init();

  // Add a direct check to ensure loading screen is hidden
  window.addEventListener('load', () => {
    setTimeout(() => {
      hideLoadingScreen();
    }, 2000);
  });
</script>

